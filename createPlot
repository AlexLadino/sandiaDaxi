	set style line 2 lt 1 lc rgb "green" lw 1
	
        plot	"logs/CourantMax_0" title "Co_{max}" w lines ls 1,\
		"logs/CourantMean_0" title "Co_{mean}" w lines ls 2"
EOF

	

